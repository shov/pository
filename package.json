{
  "name": "pository",
  "version": "0.0.1",
  "description": "TS/JS Nodejs DAO base/abstract layer for repository",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "pretest": "scripts/postrges/run.sh",
    "test": "jest --detectOpenHandles || :",
    "posttest": "scripts/postrges/down.sh"
  },
  "keywords": [
    "dao",
    "db",
    "repo",
    "repository",
    "data"
  ],
  "author": "Alexandr Shevchenko",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "pg": "^8.11.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/pg": "^8.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!node_modules/**",
      "!dist/**",
      "!scripts/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testTimeout": 30000
  }
}
