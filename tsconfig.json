{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ES2020", "es2021.weakref"],
    "module": "commonjs",
    "target": "es2019",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
